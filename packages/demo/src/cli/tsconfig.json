{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "../../build-cli",
    "types": ["node"],
    "lib": ["es2020", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "exclude": ["**/node_modules", "**/tests", "**/build"],
  "include": ["."]
}
